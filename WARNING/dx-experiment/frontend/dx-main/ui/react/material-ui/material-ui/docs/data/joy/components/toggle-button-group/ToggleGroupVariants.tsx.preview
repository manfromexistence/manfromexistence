<ToggleButtonGroup
  variant={value || undefined}
  value={value}
  onChange={(event, newValue) => {
    setValue(newValue);
  }}
>
  <Button value="plain">plain</Button>
  <Button value="outlined">outlined</Button>
  <Button value="soft">soft</Button>
  <Button value="solid">solid</Button>
</ToggleButtonGroup>