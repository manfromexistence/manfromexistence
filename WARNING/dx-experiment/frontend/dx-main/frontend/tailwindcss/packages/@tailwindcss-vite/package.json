      "import": "./dist/index.mjs"
    }
  },
  "dependencies": {
    "@tailwindcss/oxide": "workspace:^",
    "tailwindcss": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "vite": "^5.0.11"
  }
