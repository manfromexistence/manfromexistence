<Avatar src={loading ? '' : '/static/images/avatar/1.jpg'}>
  <Skeleton loading={loading} />
</Avatar>
<FormControl orientation="horizontal" sx={{ gap: 1 }}>
  <Switch
    size="sm"
    checked={loading}
    onChange={(event) => setLoading(event.target.checked)}
  />
  <FormLabel>Loading</FormLabel>
</FormControl>