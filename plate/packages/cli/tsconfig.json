{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "test"],
  "exclude": [
    "../node_modules",
    "../**/node_modules",
    "../dist",
    "../**/dist",
    "../**/*.stories.*",
    "../**/*fixture*",
    "../**/*spec*",
    "../**/*test*",
    "../**/*template*"
  ]
}
