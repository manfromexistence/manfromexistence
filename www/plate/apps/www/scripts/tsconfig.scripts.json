{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowImportingTsExtensions": true
  },
  "include": ["scripts/**/*.{ts,mts}"],
  "exclude": ["node_modules"]
}
